<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="myPage">
	<select id="selectOneUserDetail" parameterType="String" resultType="UserDTO">
		SELECT 
				*
		FROM 
				USER
		WHERE 
				USER_ID = #{userId}	
	</select>
	<select id="selectOneAuthenticationUser" parameterType="String" resultType="String">
		SELECT 
				PASSWD AS passwd
		FROM
				USER
		WHERE
				USER_ID = #{userId}
	</select>
	
	<update id="updateUser" parameterType="UserDTO">
		UPDATE USER
		<set>
			<if test='profile != null and profile !=""'>
			PROFILE,
			</if >
			<if test='userId != null and userId !=""'>	
			USER_ID,
			</if>
			<if test='userNm != null and userNm !=""'>
			USER_NM,
			</if>
				<if test='email != null and email !=""'>
			EMAIL,
			</if>
				<if test='birthDt != null and birthDt !=""'>
			BIRTH_DT,
			</if>
				<if test='hp != null and hp !=""'>
			HP,
			</if>
				<if test='zipcode != null and zipcode !=""'>
			ZIPCODE,
			</if>
				<if test='roadAddress != null and roadAddress !=""'>
			ROADADDRESS,
			</if>
				<if test='jibunaddress != null and jibunaddress !=""'>
			JIBUNADDRES,
			</if>
				<if test='namujiAddress != null and namujiAddress !=""'>
			NAMUJIADDRESS
			</if>
		)
		SET (
			#{profile},
			#{userId},
			#{userNm},
			#{email},
			#{birthDT},
			#{hp},
			#{zipcode},
			#{roadAddress},
			#{jibunAddress},
			#{namujiAddress}
		)
		</set>
		WHERE 
			USER_ID = #{userId}
	</update>
</mapper>