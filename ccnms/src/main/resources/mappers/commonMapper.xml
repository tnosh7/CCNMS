<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="common">
	<select id="selectListDiggingList" resultType="DiggingDTO">
		SELECT 
				*
		FROM 
				DIGGING
	</select>
	
	<select id="selectListSortDiggingList" parameterType="String" resultType="DiggingDTO">
		SELECT 
				*
		FROM 
				DIGGING
		ORDER BY 
			<if test='sort == "readCnt"'>
				READ_CNT DESC;	
			</if> 
			<if test='sort== "thumbsUp"'>
				THUMBS_UP DESC;	
			</if> 
			<if test='sort == "recent"'>
				DIGGING_ID DESC;	
			</if>
	</select>
	
	<select id="selectOneAllDiggingCnt" resultType="int">
		SELECT 
			COUNT(*)
		FROM 
			DIGGING
	</select>
	
	<select id="selectOneReplyCnt" parameterType="long" resultType="ReplyDTO">
		SELECT 
			COUNT(REPLY_ID)
		FROM
			REPLY
		WHERE
			DIGGING_ID = #{DIGGING_ID};
	</select>
	<update id="updateThumbsUp" parameterType="long">
		UPDATE 
			DIGGING
		SET
			THUMBS_UP = THUMBS_UP + 1
		WHERE 
			DIGGING_ID = #{diggingId};
	</update>
	
	<select id="selectOneUserInfo" parameterType="String" resultType="UserDTO">
		SELECT 
			*
		FROM 
			USER
		WHERE
			USER_ID = #{writer}
	</select>
</mapper>