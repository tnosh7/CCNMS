<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="user">
	<insert id="insertUser" parameterType="UserDTO">
		INSERT INTO USER 
		VALUES (
				#{userId},
				#{userNm},
				#{birthDT},
				#{passwd},
				#{zipcode},
				#{roadAddress},
				#{jibunAddress},
				#{namujiAddress},
				#{sex},
				#{hp},
				#{email},
				#{emailYN},
				NOW()
		)
	</insert>
	
	<select id="selectOneValidateUser" parameterType="UserDTO" resultType="String">
		SELECT 
			USER_ID
		FROM
			USER
		WHERE
			USER_ID = #{userId}
	</select>
</mapper>